# =============================================================================
# Advanced LEO Search Tool - Environment Configuration
# FREE/PUBLIC APIs ONLY - No Paid Services
# =============================================================================

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
ENVIRONMENT=development
DEBUG=true
APP_NAME="Advanced LEO Search Tool"
APP_VERSION="1.0.0"
APP_DESCRIPTION="Comprehensive people search tool for realtor companies using public databases only"

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# SERVER SETTINGS
# =============================================================================
HOST=0.0.0.0
PORT=8000
WORKERS=4
BACKLOG=2048
TIMEOUT=60

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://leo_user:leo_password@localhost:5432/leo_search
REDIS_URL=redis://localhost:6379
ELASTICSEARCH_URL=http://localhost:9200

# =============================================================================
# FREE/PUBLIC DATA SOURCES - NO PAID APIS
# =============================================================================

# =============================================================================
# GOVERNMENT & PUBLIC RECORDS (FREE)
# =============================================================================
# US Census Bureau - Free API
CENSUS_API_KEY=your-census-api-key-free
# Federal Election Commission - Free API  
FEC_API_KEY=your-fec-api-key-free
# PACER (Public Access to Court Electronic Records) - Free with registration
PACER_USERNAME=your-pacer-username
PACER_PASSWORD=your-pacer-password
# USPS Address Validation - Free for registered users
USPS_USER_ID=your-usps-user-id-free

# =============================================================================
# OPEN DATA & PUBLIC DATABASES (FREE)
# =============================================================================
# OpenCorporates - Free business data
OPENCORPORATES_API_KEY=your-opencorporates-api-key-free
# OpenSecrets - Free political contribution data
OPENSECRETS_API_KEY=your-opensecrets-api-key-free
# Data.gov - Free government datasets
DATA_GOV_API_KEY=your-datagov-api-key-free

# =============================================================================
# WEB SCRAPING & PUBLIC DATA (FREE)
# =============================================================================
# Enable web scraping for public websites
ENABLE_WEB_SCRAPING=true
# Respect robots.txt and rate limiting
SCRAPING_DELAY_SECONDS=2
MAX_REQUESTS_PER_MINUTE=30
# User agent for web scraping
SCRAPING_USER_AGENT="LEO-Search-Tool/1.0 (Educational/Research Use)"

# =============================================================================
# SOCIAL MEDIA (FREE TIERS ONLY)
# =============================================================================
# Twitter API v2 - Free tier (limited)
TWITTER_API_KEY=your-twitter-api-key-free-tier
TWITTER_API_SECRET=your-twitter-api-secret-free-tier
TWITTER_BEARER_TOKEN=your-twitter-bearer-token-free-tier
# Note: Twitter API has rate limits on free tier

# =============================================================================
# GEOLOCATION SERVICES (FREE)
# =============================================================================
# OpenStreetMap Nominatim - Free geocoding
NOMINATIM_USER_AGENT="LEO-Search-Tool/1.0"
# MapBox - Free tier (limited requests)
MAPBOX_ACCESS_TOKEN=your-mapbox-token-free-tier
# Note: MapBox free tier has 50,000 requests/month limit

# =============================================================================
# DATA SOURCE ENABLEMENT FLAGS
# =============================================================================
# Government & Public Records
ENABLE_COURT_RECORDS=true
ENABLE_PROPERTY_RECORDS=true
ENABLE_BUSINESS_RECORDS=true
ENABLE_VOTER_RECORDS=true
ENABLE_CRIMINAL_RECORDS=true
ENABLE_SEX_OFFENDER_REGISTRY=true
ENABLE_BANKRUPTCY_RECORDS=true
ENABLE_TAX_RECORDS=true
ENABLE_MARRIAGE_RECORDS=true
ENABLE_DEATH_RECORDS=true
ENABLE_IMMIGRATION_RECORDS=true
ENABLE_MILITARY_RECORDS=true
ENABLE_EDUCATION_RECORDS=true
ENABLE_PROFESSIONAL_LICENSES=true
ENABLE_REAL_ESTATE_LICENSES=true

# Public Data Sources
ENABLE_SOCIAL_MEDIA=true
ENABLE_NEWS_MEDIA=true
ENABLE_FINANCIAL_RECORDS=true
ENABLE_VEHICLE_RECORDS=true
ENABLE_INSURANCE_RECORDS=true
ENABLE_UTILITY_RECORDS=true

# Web Scraping Sources
ENABLE_PHONE_DIRECTORIES=true
ENABLE_EMAIL_DATABASES=true
ENABLE_ADDRESS_VERIFICATION=true

# =============================================================================
# SEARCH ENGINE CONFIGURATION
# =============================================================================
# AI and Machine Learning
ENABLE_AI_ENHANCEMENT=true
ENABLE_NLP_PROCESSING=true
ENABLE_PATTERN_RECOGNITION=true
ENABLE_CONFIDENCE_SCORING=true

# Search Parameters
DEFAULT_CONFIDENCE_THRESHOLD=0.7
MAX_SEARCH_RESULTS=1000
MAX_CONCURRENT_SEARCHES=20
SEARCH_TIMEOUT_SECONDS=300

# Result Processing
ENABLE_RESULT_CORRELATION=true
ENABLE_DUPLICATE_DETECTION=true
ENABLE_RESULT_RANKING=true
ENABLE_FILTERING=true

# =============================================================================
# CACHING & PERFORMANCE
# =============================================================================
ENABLE_CACHING=true
CACHE_TTL_SECONDS=3600
REDIS_MAX_CONNECTIONS=20
REDIS_RETRY_ON_TIMEOUT=true
REDIS_HEALTH_CHECK_INTERVAL=30

# Elasticsearch Configuration
ELASTICSEARCH_TIMEOUT=30
ELASTICSEARCH_MAX_RETRIES=3
ELASTICSEARCH_RETRY_ON_TIMEOUT=true
ELASTICSEARCH_SNIFF_ON_START=true

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
LOG_LEVEL=INFO
ENABLE_STRUCTURED_LOGGING=true
ENABLE_AUDIT_LOGGING=true
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true

# Log Files
LOG_FILE=./logs/leo_search.log
AUDIT_LOG_FILE=./logs/audit.log
ERROR_LOG_FILE=./logs/error.log

# =============================================================================
# RATE LIMITING & THROTTLING
# =============================================================================
# API Rate Limiting
ENABLE_RATE_LIMITING=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_REQUESTS_PER_HOUR=1000
RATE_LIMIT_REQUESTS_PER_DAY=10000

# Data Source Rate Limiting
COURT_RECORDS_RATE_LIMIT=10
GOVERNMENT_API_RATE_LIMIT=50
SOCIAL_MEDIA_RATE_LIMIT=30
WEB_SCRAPING_RATE_LIMIT=20

# =============================================================================
# DATA RETENTION & PRIVACY
# =============================================================================
# Data Retention (days)
SEARCH_RESULT_RETENTION_DAYS=90
AUDIT_LOG_RETENTION_DAYS=365
CACHE_RETENTION_DAYS=7
USER_DATA_RETENTION_DAYS=30

# Privacy & Compliance
ENABLE_GDPR_COMPLIANCE=true
ENABLE_CCPA_COMPLIANCE=true
ENABLE_DATA_ANONYMIZATION=true
ENABLE_AUDIT_TRAIL=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_ADVANCED_SEARCH=true
ENABLE_BATCH_SEARCH=false
ENABLE_EXPORT_RESULTS=true
ENABLE_USER_MANAGEMENT=true
ENABLE_ROLE_BASED_ACCESS=true

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================
# Testing
ENABLE_TESTING=false
TEST_DATABASE_URL=postgresql://test_user:test_password@localhost:5432/leo_search_test
TEST_REDIS_URL=redis://localhost:6379/1

# Development Tools
ENABLE_DEBUG_TOOLBAR=false
ENABLE_SWAGGER_UI=true
ENABLE_RELOAD=true
ENABLE_PROFILING=false

# =============================================================================
# FILE PATHS & STORAGE
# =============================================================================
DATA_DIRECTORY=./data
TEMP_DIRECTORY=./temp
LOGS_DIRECTORY=./logs
UPLOAD_DIRECTORY=./uploads
EXPORT_DIRECTORY=./exports

# =============================================================================
# EXTERNAL SERVICE INTEGRATIONS (FREE ONLY)
# =============================================================================
# Email Service (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true

# File Storage (local filesystem)
STORAGE_TYPE=local
STORAGE_PATH=./storage

# =============================================================================
# SECURITY & COMPLIANCE
# =============================================================================
# CORS Settings
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8000"]
ALLOWED_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
ALLOWED_HEADERS=["*"]

# SSL/TLS
ENABLE_SSL=false
SSL_CERT_FILE=
SSL_KEY_FILE=

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================
# Database
ENABLE_CONNECTION_POOLING=true
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_PRE_PING=true

# Async Processing
ENABLE_ASYNC_PROCESSING=true
MAX_WORKER_PROCESSES=4
MAX_WORKER_THREADS=8

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================
# Prometheus Metrics
METRICS_PORT=9090
ENABLE_PROMETHEUS_METRICS=true

# Health Checks
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# =============================================================================
# BACKGROUND TASKS
# =============================================================================
# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_TASK_SOFT_TIME_LIMIT=300
CELERY_TASK_TIME_LIMIT=600

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_WEBHOOK_NOTIFICATIONS=false

